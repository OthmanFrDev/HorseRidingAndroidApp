<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".dialog_user_details">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="40dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@id/shapeuser"
                android:layout_width="89dp"
                android:layout_height="80dp"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_shape_user"
                app:layout_constraintBottom_toTopOf="@id/nameuser"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="16dp" />
            <TextView
                android:id="@id/nameuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tessssssssssssssssss"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@id/shapeuser"
                app:layout_constraintEnd_toEndOf="@id/shapeuser"
                app:layout_constraintTop_toBottomOf="@id/shapeuser"
                />
            <View
                android:layout_marginRight="10dp"
                android:id="@id/line1"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/nameuser"
                android:background="#D77E2C" />
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@id/actionuser"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/line1"
                app:layout_constraintBottom_toTopOf="@id/line2">
                <ImageButton
                    android:id="@id/callbtn"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:background="@color/white"
                    android:src="@drawable/ic_baseline_phone_50"
                    android:layout_height="wrap_content"
                    />
                <ImageButton
                    android:id="@id/editbtn"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/white"
                    android:src="@drawable/ic_baseline_edit_50"
                    android:layout_height="wrap_content"
                    />
                <ImageButton
                    android:id="@id/calendarbtn"
                    android:layout_width="wrap_content"
                    android:background="@color/white"
                    android:src="@drawable/ic_baseline_calendar_today_50"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

            <View
                android:layout_marginRight="10dp"
                android:id="@id/line2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/actionuser"
                android:background="#D77E2C" />
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/e_mail"
                android:labelFor="@id/emailinput"
                app:layout_constraintBaseline_toBaselineOf="@id/emailinput"
                android:id="@id/emaillabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line2"/>
            <EditText
                app:layout_constraintStart_toEndOf="@id/emaillabel"
                android:layout_width="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:text=""
                android:layout_marginLeft="10dp"
                android:maxLines="1"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/line2"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:id="@id/emailinput"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TEL"
                android:labelFor="@id/telephoneinput"
                app:layout_constraintBaseline_toBaselineOf="@id/telephoneinput"
                android:id="@id/telephonelabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/emaillabel"
                />
            <EditText
                android:id="@id/telephoneinput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/emailinput"
                app:layout_constraintTop_toBottomOf="@id/emailinput"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                />
            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/telephoneinput"
                app:layout_constraintStart_toStartOf="parent">
                <androidx.appcompat.widget.AppCompatButton
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:text="@string/supprimer"/>
            </LinearLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>