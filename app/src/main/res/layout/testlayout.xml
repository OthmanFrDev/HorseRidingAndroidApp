<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeekView_Calendar"
    tools:ignore="MissingDefaultResource">
    <GridLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@id/gridWeek"
        android:scrollbars="none"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:rowCount="1"
        android:columnCount="3">

        <ImageButton
            android:id="@id/btnprevious"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:onClick="weekchanger"
            android:src="@drawable/ic_previous" />
        <TextView
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:text="LUN"
            android:gravity="center"
            android:background="@drawable/textview_border"
            android:layout_rowWeight="1"
            android:id="@id/day" />

        <ImageButton
            android:id="@id/btnnext"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:onClick="weekchanger"
            android:src="@drawable/ic_baseline_navigate_next_24" />

    </GridLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gridWeek"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp">
    <GridLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gridWeek"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:rowCount="1"
        android:columnCount="8"
        >
        <GridLayout
            android:id="@id/gridTime"
            android:layout_width="42dp"
            android:layout_height="0dp"
            android:rowCount="12"
            android:columnCount="1">
            <LinearLayout
                android:id="@id/heure"
                android:layout_height="80dp"
                android:layout_rowWeight="1"
                android:layout_gravity="center"
                android:layout_columnWeight="1"
                android:textAlignment="center"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@id/pm8"
                    android:layout_height="80dp"
                    android:layout_width="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:text="heure" />
            </LinearLayout>
            <TextView
                android:id="@id/pm8"
                android:layout_height="80dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="08:00" />
            <TextView
                android:text="09:00"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:id="@id/pm9"/>
            <TextView
                android:text="10:00"
                android:layout_columnWeight="1"
                android:layout_height="80dp"
                android:layout_rowWeight="1"
                android:id="@id/pm10"/>
            <TextView
                android:text="11:00"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_height="80dp"
                android:id="@id/pm11"/>
            <TextView
                android:text="12:00"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_height="80dp"
                android:id="@id/pm12"/>
            <TextView
                android:text="13:00"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:id="@id/pm13"/>
            <TextView
                android:text="14:00"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:id="@id/pm14"/>
            <TextView
                android:text="15:00"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:id="@id/pm15"/>
            <TextView
                android:text="16:00"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:id="@id/pm16"/>
            <TextView
                android:text="17:00"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:id="@id/pm17"/>
            <TextView
                android:text="18:00"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:id="@id/pm18"/>
        </GridLayout>
        <GridLayout
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:rowCount="12"
            android:columnCount="1">
            <LinearLayout
                android:id="@id/Lunpm8"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_rowWeight="1"
                android:layout_gravity="center"
                android:layout_columnWeight="1"
                android:textAlignment="center"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@id/pm8"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:text="Lundi" />
            </LinearLayout>

            <LinearLayout
                android:id="@id/Lun_08"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@drawable/border"
                android:onClick="seancedetails"
                android:orientation="vertical"
                android:textAlignment="center"></LinearLayout>

            <LinearLayout
                android:id="@id/Lun_09"
                android:layout_rowWeight="1"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:background="@drawable/border"
                android:onClick="seancedetails"
                android:orientation="vertical"
                android:text="" ></LinearLayout>

            <LinearLayout
                android:id="@id/Lun_10"
                android:layout_width="match_parent"
                android:layout_rowWeight="1"
                android:layout_height="80dp"
                android:textAlignment="center"
                android:onClick="seancedetails"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:text="" android:background="@drawable/border"></LinearLayout>

            <LinearLayout
                android:id="@id/Lun_11"
                android:layout_width="match_parent"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_height="80dp"
                android:textAlignment="center"
                android:text=""
                android:orientation="vertical"
                android:background="@drawable/border"
                android:onClick="seancedetails"
                ></LinearLayout>

            <LinearLayout
                android:id="@id/Lun_12"
                android:layout_width="match_parent"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_height="80dp"
                android:textAlignment="center"
                android:orientation="vertical"
                android:onClick="seancedetails"
                android:text="" android:background="@drawable/border"></LinearLayout>

            <LinearLayout
                android:id="@id/Lun_13"
                android:layout_width="match_parent"
                android:layout_rowWeight="1"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:textAlignment="center"
                android:orientation="vertical"
                android:onClick="seancedetails"
                android:text="" android:background="@drawable/border"></LinearLayout>

            <LinearLayout
                android:id="@id/Lun_14"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:textAlignment="center"
                android:orientation="vertical"
                android:onClick="seancedetails"
                android:text="" android:background="@drawable/border"></LinearLayout>

            <LinearLayout
                android:id="@id/Lun_15"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_rowWeight="1"
                android:textAlignment="center"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:onClick="seancedetails"
                android:text="" android:background="@drawable/border"></LinearLayout>

            <LinearLayout
                android:id="@id/Lun_16"
                android:layout_width="match_parent"
                android:layout_rowWeight="1"
                android:layout_height="80dp"
                android:textAlignment="center"
                android:layout_columnWeight="1"
                android:onClick="seancedetails"
                android:orientation="vertical"
                android:text="" android:background="@drawable/border"></LinearLayout>

            <LinearLayout
                android:id="@id/Lun_17"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_rowWeight="1"
                android:textAlignment="center"
                android:layout_columnWeight="1"
                android:onClick="seancedetails"
                android:orientation="vertical"
                android:text="" android:background="@drawable/border"></LinearLayout>

            <LinearLayout
                android:id="@id/Lun_18"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:textAlignment="center"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:onClick="seancedetails"
                android:orientation="vertical"
                android:text="" android:background="@drawable/border"></LinearLayout>
        </GridLayout>
    </GridLayout>
    </HorizontalScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:elevation="2dp"
        android:onClick="onclickbtn"
        android:visibility="invisible"
        android:layout_margin="20dp"
        app:menu="@menu/item_menu"
        android:background="@drawable/rounded_selector"
        app:itemIconSize="30dp"
        app:itemIconTint="@drawable/item_selector"
        android:id="@id/bottom_navigation"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@id/floatingActionButtonweek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="20dp"
        android:clickable="true"
        android:onClick="onclickbtn"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@android:drawable/ic_input_add" />
</androidx.constraintlayout.widget.ConstraintLayout>

