<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="0dp"
    android:layout_height="match_parent"
    tools:context=".RecycleCalendar">
    <androidx.appcompat.widget.Toolbar
        android:id="@id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/purple_700"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_constraintTop_toTopOf="parent"/>
    <GridLayout
        app:layout_constraintTop_toBottomOf="@id/toolBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/gridTime"
        android:id="@id/gridWeek"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:rowCount="1"
        android:columnCount="3">
        <ImageButton
            android:id="@id/btnprevious"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_previous"
            android:onClick="nextday"
            />
        <TextView
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:text="LUN"
            android:gravity="center"
            android:background="@drawable/textview_border"
            android:layout_rowWeight="1"
            android:id="@id/day" />

        <ImageButton
            android:id="@id/btnnext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_navigate_next_24"
            android:onClick="nextday" />

    </GridLayout>
    <GridLayout
        app:layout_constraintTop_toBottomOf="@id/gridWeek"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@id/gridTime"
        android:layout_width="42dp"
        android:layout_height="0dp"
        android:rowCount="11"
        android:columnCount="1">

        <TextView
            android:id="@id/pm8"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"

            android:text="08:00" />
        <TextView
            android:text="09:00"


            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@id/pm9"/>
        <TextView
            android:text="10:00"
            android:layout_columnWeight="1"

            android:layout_rowWeight="1"

            android:id="@id/pm10"/>
        <TextView
            android:text="11:00"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"


            android:id="@id/pm11"/>
        <TextView
            android:text="12:00"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"


            android:id="@id/pm12"/>
        <TextView
            android:text="13:00"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"


            android:id="@id/pm13"/>
        <TextView
            android:text="14:00"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"


            android:id="@id/pm14"/>
        <TextView
            android:text="15:00"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"


            android:id="@id/pm15"/>
        <TextView
            android:text="16:00"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"


            android:id="@id/pm16"/>
        <TextView
            android:text="17:00"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"


            android:id="@id/pm17"/>
        <TextView
            android:text="18:00"
            android:layout_columnWeight="1"

            android:layout_rowWeight="1"

            android:id="@id/pm18"/>
    </GridLayout>

    <LinearLayout
        app:layout_constraintStart_toEndOf="@id/gridTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gridWeek"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="11"
            android:columnCount="1">
            <TextView
                android:id="@id/time_08"
                android:layout_width="match_parent"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:textAlignment="center"
                android:clickable="true"
                android:onClick="addSeance"
                android:text="VIDE" />

            <TextView
                android:id="@id/time_09"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"

                android:textAlignment="center"
                android:layout_width="match_parent"
                android:onClick="addSeance"
                android:text="VIDE" />

            <TextView
                android:id="@id/time_10"
                android:layout_width="match_parent"
                android:layout_rowWeight="1"
                android:textAlignment="center"
                android:layout_columnWeight="1"
                android:onClick="addSeance"

                android:text="VIDE" />

            <TextView
                android:id="@id/time_11"
                android:layout_width="match_parent"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:textAlignment="center"
                android:onClick="addSeance"
                android:text="VIDE" />

            <TextView
                android:id="@id/time_12"
                android:layout_width="match_parent"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:textAlignment="center"
                android:onClick="addSeance"
                android:text="VIDE" />

            <TextView
                android:id="@id/time_13"
                android:layout_width="match_parent"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:textAlignment="center"
                android:onClick="addSeance"
                android:text="VIDE" />

            <TextView
                android:id="@id/time_14"
                android:layout_width="match_parent"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:textAlignment="center"
                android:onClick="addSeance"
                android:text="VIDE" />

            <TextView
                android:id="@id/time_15"
                android:layout_width="match_parent"
                android:layout_rowWeight="1"
                android:textAlignment="center"
                android:layout_columnWeight="1"
                android:onClick="addSeance"
                android:text="VIDE" />

            <TextView
                android:id="@id/time_16"
                android:layout_width="match_parent"
                android:layout_rowWeight="1"
                android:textAlignment="center"
                android:layout_columnWeight="1"
                android:onClick="addSeance"
                android:text="VIDE" />

            <TextView
                android:id="@id/time_17"
                android:layout_width="match_parent"
                android:layout_rowWeight="1"
                android:textAlignment="center"
                android:layout_columnWeight="1"
                android:onClick="addSeance"
                android:text="VIDE" />

            <TextView
                android:id="@id/time_18"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:onClick="addSeance"
                android:text="VIDE" />
        </GridLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>