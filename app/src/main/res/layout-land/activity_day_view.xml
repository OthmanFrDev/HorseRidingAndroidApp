<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:layout_height="match_parent"
    tools:context=".RecycleCalendar">
    <GridLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@id/gridWeek"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:rowCount="1"
        android:columnCount="3">
        <ImageButton
            android:id="@id/btnprevious"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_previous"
            android:onClick="daySwitcher"
            />
        <TextView
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:text="LUN"
            android:gravity="center"
            android:background="@drawable/textview_border"
            android:layout_rowWeight="1"
            android:id="@id/day" />

        <ImageButton
            android:id="@id/btnnext"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_navigate_next_24"
            android:onClick="daySwitcher" />

    </GridLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gridWeek"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="1"
                android:columnCount="2">
                <GridLayout
                    android:id="@id/gridTime"
                    android:layout_width="42dp"
                    android:layout_height="match_parent"
                    android:rowCount="11"
                    android:columnCount="1">

                    <TextView
                        android:id="@id/pm8"
                        android:layout_height="80dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:text="08:00" />

                    <TextView
                        android:id="@id/pm9"
                        android:layout_height="80dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:text="09:00" />
                    <TextView
                        android:text="10:00"
                        android:layout_columnWeight="1"
                        android:layout_height="80dp"
                        android:layout_rowWeight="1"
                        android:id="@id/pm10"/>
                    <TextView
                        android:text="11:00"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_height="80dp"
                        android:id="@id/pm11"/>
                    <TextView
                        android:text="12:00"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_height="80dp"
                        android:id="@id/pm12"/>
                    <TextView
                        android:text="13:00"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_height="80dp"
                        android:id="@id/pm13"/>
                    <TextView
                        android:text="14:00"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_height="80dp"
                        android:id="@id/pm14"/>
                    <TextView
                        android:text="15:00"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_height="80dp"
                        android:id="@id/pm15"/>
                    <TextView
                        android:text="16:00"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_height="80dp"
                        android:id="@id/pm16"/>
                    <TextView
                        android:text="17:00"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_height="80dp"
                        android:id="@id/pm17"/>
                    <TextView
                        android:text="18:00"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_height="80dp"
                        android:id="@id/pm18"/>
                </GridLayout>
                <GridLayout
                    android:layout_width="match_parent"
                    android:rowCount="11"
                    android:layout_height="match_parent"
                    android:columnCount="1">
                    <TextView
                        android:id="@id/time_08"
                        android:layout_width="match_parent"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:textAlignment="center"
                        android:clickable="true"
                        android:layout_height="80dp"
                        android:onClick="clickSeance"
                        android:text="VIDE" />

                    <TextView
                        android:id="@id/time_09"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_height="80dp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:onClick="clickSeance"
                        android:text="VIDE" />

                    <TextView
                        android:id="@id/time_10"
                        android:layout_width="match_parent"
                        android:layout_rowWeight="1"
                        android:textAlignment="center"
                        android:layout_columnWeight="1"
                        android:onClick="clickSeance"
                        android:layout_height="80dp"
                        android:text="VIDE" />

                    <TextView
                        android:id="@id/time_11"
                        android:layout_width="match_parent"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:textAlignment="center"
                        android:layout_height="80dp"
                        android:onClick="clickSeance"
                        android:text="VIDE" />

                    <TextView
                        android:id="@id/time_12"
                        android:layout_width="match_parent"
                        android:layout_rowWeight="1"
                        android:layout_height="80dp"
                        android:layout_columnWeight="1"
                        android:textAlignment="center"
                        android:onClick="clickSeance"
                        android:text="VIDE" />

                    <TextView
                        android:id="@id/time_13"
                        android:layout_width="match_parent"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:textAlignment="center"
                        android:onClick="clickSeance"
                        android:layout_height="80dp"
                        android:text="VIDE" />

                    <TextView
                        android:id="@id/time_14"
                        android:layout_width="match_parent"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:textAlignment="center"
                        android:onClick="clickSeance"
                        android:layout_height="80dp"
                        android:text="VIDE" />

                    <TextView
                        android:id="@id/time_15"
                        android:layout_width="match_parent"
                        android:layout_rowWeight="1"
                        android:textAlignment="center"
                        android:layout_columnWeight="1"
                        android:onClick="clickSeance"
                        android:layout_height="80dp"
                        android:text="VIDE" />

                    <TextView
                        android:id="@id/time_16"
                        android:layout_width="match_parent"
                        android:layout_rowWeight="1"
                        android:textAlignment="center"
                        android:layout_columnWeight="1"
                        android:onClick="clickSeance"
                        android:layout_height="80dp"
                        android:text="VIDE" />

                    <TextView
                        android:id="@id/time_17"
                        android:layout_width="match_parent"
                        android:layout_rowWeight="1"
                        android:textAlignment="center"
                        android:layout_columnWeight="1"
                        android:onClick="clickSeance"
                        android:layout_height="80dp"
                        android:text="VIDE" />

                    <TextView
                        android:id="@id/time_18"
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:onClick="clickSeance"
                        android:layout_height="80dp"
                        android:text="VIDE" />
                </GridLayout>
            </GridLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>